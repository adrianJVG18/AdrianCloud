<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/addpost_logo"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:src="@drawable/zelda_logo"
            android:tint="@color/lightGray"/>

    <TextView
            android:id="@+id/postform_textV_post_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:text="@string/a_ada_un_nuevo_post"
            android:textStyle="italic"
            android:textSize="24sp"/>


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/semi_transparent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="20dp"
            android:layout_alignTop="@id/addpost_logo"
            android:layout_marginTop="64dp">

        <EditText
                android:id="@+id/postform_edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:hint="@string/titulo"
                android:lines="1"
                android:inputType="text"
                android:textSize="20sp"
                android:textStyle="bold|italic"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/semi_transparent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignBottom="@id/addpost_logo"
            android:layout_marginBottom="136dp"
            app:cardCornerRadius="20dp">

        <EditText
                android:id="@+id/postform_edit_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:hint="@string/cuerpo"
                android:lines="3"
                android:inputType="text"
                android:textSize="20sp"
                android:textStyle="bold|italic"/>

    </androidx.cardview.widget.CardView>

    <ImageButton
            android:id="@+id/bttn_delete_post"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/delete_icon"
            android:scaleType="fitCenter"
            android:padding="16dp"
            android:backgroundTint="@color/transparent"
            android:tint="@color/transparentRed"
            android:layout_alignBottom="@id/addpost_logo"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/for_deleting_received_post"/>

    <Button
            android:id="@+id/bttn_accept_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="48dp"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/agregar_post"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:backgroundTint="@android:color/black"
            android:textStyle="italic"/>

    <Button
            android:id="@+id/bttn_cancel_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/cancelar"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/softRed"
            android:textStyle="italic"/>

</RelativeLayout>